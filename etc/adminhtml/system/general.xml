<include xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_include.xsd">
    <group id="general" translate="label" type="text" sortOrder="20" showInDefault="1" showInWebsite="1"
           showInStore="1">
        <label>General</label>
        <field id="version_button" translate="label" type="button" sortOrder="10" showInDefault="1"
               showInWebsite="1" showInStore="1">
            <label>Version</label>
            <frontend_model>Mollie\Subscriptions\Block\Adminhtml\System\Config\Button\VersionCheck</frontend_model>
        </field>
        <field id="enable" translate="label" type="select" sortOrder="20" showInDefault="1" showInWebsite="1"
               showInStore="1">
            <label>Enabled</label>
            <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
            <config_path>mollie_subscriptions/general/enable</config_path>
        </field>
        <field id="apikey" translate="label" type="obscure" sortOrder="30" showInDefault="1" showInWebsite="1"
               showInStore="1">
            <label>API Key</label>
            <backend_model>Magento\Config\Model\Config\Backend\Encrypted</backend_model>
            <config_path>mollie_subscriptions/general/apikey</config_path>
            <depends>
                <field id="enable">1</field>
            </depends>
        </field>
        <field id="disable_add_to_cart" translate="label" type="select" sortOrder="40" showInDefault="1" showInWebsite="1"
               showInStore="1">
            <label>Disable default add to cart button for subscription products</label>
            <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
            <config_path>mollie_subscriptions/general/disable_add_to_cart</config_path>
            <depends>
                <field id="enable">1</field>
            </depends>
        </field>
    </group>
</include>
